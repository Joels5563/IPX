<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/project_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/project_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/project_image"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/project_image" />

    <TextView
        android:id="@+id/project_first_region"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/project_country"
        android:layout_alignBottom="@+id/project_country"
        android:layout_toEndOf="@+id/line" />

    <TextView
        android:id="@+id/project_country"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/project_image"
        android:layout_alignStart="@+id/project_name"
        android:layout_marginBottom="9dp" />

    <TextView
        android:id="@+id/project_type"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/project_name"
        android:layout_alignBottom="@+id/project_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp" />

    <TextView
        android:id="@+id/line"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/project_country"
        android:layout_alignTop="@+id/project_first_region"
        android:layout_toEndOf="@+id/project_country"
        android:text="  -" />

</RelativeLayout>