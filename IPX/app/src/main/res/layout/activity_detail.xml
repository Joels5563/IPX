<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.ipx.ipx.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/project_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/project_name_info"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/project_image"
            android:text="@string/project_name" />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/project_image"
            android:layout_alignStart="@+id/project_name_info"
            android:layout_marginBottom="13dp" />

        <TextView
            android:id="@+id/project_address_info"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="11dp"
            android:text="@string/project_address"
            android:layout_alignBaseline="@+id/project_address"
            android:layout_alignBottom="@+id/project_address"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/project_address"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/project_name"
            android:layout_below="@+id/project_image"
            android:layout_marginTop="21dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/project_image"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/token"
                android:layout_width="match_parent"
                android:layout_height="152dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>